/* pages/detail/detail.wxss */
.container {
  display: flex;
  flex-direction:column;
}
.cover {
  width: 100%;
  height: 460rpx;
}
.info image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin: 10rpx;
}
.info text {
  font-size: 28rpx;
}
.title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 10rpx 10rpx;
}
.careDetail {
  position: relative;
  display: flex;
  justify-content: flex-end;
}
.careDetail::before {
  content: '';
  border-top: 1rpx solid #eee;
  width: 90%;
  position: absolute;
  top: 45rpx;
  left: 5%;
  z-index: -1;
}
.iconfont {
  font-size: 36rpx;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background: #d2d2d2;
  margin: 10rpx;
  text-align: center;
  color: white;
}
.icon-fenxiang {
  background: #60a8a7;
  margin-right: 60rpx;
}
.forward {
  font-size: 28rpx;
}
.content {
  font-size: 32rpx;
  text-indent: 32rpx;
  padding: 10rpx;
}