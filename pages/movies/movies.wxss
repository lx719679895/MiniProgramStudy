/* pages/movies/movies.wxss */
.movieContainer {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #dddddd;
}

.movie-cover {
  width: 128rpx;
  height: 128rpx;
}
.movie-info {
  width: 70%;
  display: flex;
  flex-direction: column;
  padding: 0 16rpx;
}
.movie-title {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.movie-year {
  font-size: 24rpx;
  color: #999;
  margin: 10rpx 0;
}
.movie-director {
  font-size: 24rpx;
  color: #333;
}
.movie-rating {
  font-size: 32rpx;
  color: red;
  font-weight: bold;
}